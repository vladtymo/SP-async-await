<Window x:Class="_01_async_await.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_async_await"
        mc:Ignorable="d"
        Title="MainWindow" Height="295" Width="807">
    <DockPanel Margin="20">
        <ProgressBar DockPanel.Dock="Top" IsIndeterminate="True" x:Name="progressBar" Value="30" Height="30"></ProgressBar>
        <Button DockPanel.Dock="Bottom" Click="Button_Click"  Height="40">Start</Button>
        <ListBox x:Name="listBox" Margin="0,10"></ListBox>
    </DockPanel>
</Window>
