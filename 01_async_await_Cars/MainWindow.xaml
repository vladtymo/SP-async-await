<Window x:Class="_01_async_await_Cars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_async_await_Cars"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="Button_Click">Load Cars</Button>
            <Button Click="Button_Click_1">Load Filteres Cars</Button>
            <Button Click="Button_Click_2">Show Cars Count</Button>
            <Label>Count to create:</Label>
            <TextBox x:Name="countTB" MinWidth="100"></TextBox>
            <Button Click="Button_Click_3">Create Random Cars</Button>
        </ToolBar>
        <DataGrid x:Name="grid"></DataGrid>
    </DockPanel>
</Window>
